<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.master.qualitydepartment.WalletActivity">

    <com.master.qualitydepartment.UniversallyTitle
        android:id="@+id/title_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.master.qualitydepartment.UniversallyTitle>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="当前等级"
            android:textSize="12sp"
            android:textColor="@color/textBlack" />

        <TextView
            android:id="@+id/tv_credit_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lv.3"
            android:textColor="@color/colorMain"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/interval_large"
        android:background="@color/dividerColor"/>


    <TextView
        android:id="@+id/tv_credit_record"
        style="@style/TxtTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_default"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_credit_record"
        android:drawableRight="@drawable/ic_right_arrow"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="信用记录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"/>

    <TextView
        android:id="@+id/tv_credit_rule"
        style="@style/TxtTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_default"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_credit_rule"
        android:drawableRight="@drawable/ic_right_arrow"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="信用规则" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"/>

</LinearLayout>
