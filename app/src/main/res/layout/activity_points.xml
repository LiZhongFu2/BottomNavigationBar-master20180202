<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.master.qualitydepartment.WalletActivity">

    <RelativeLayout
        android:id="@+id/rl_point_bg"
        android:layout_width="match_parent"
        android:layout_height="297.5dp"
        android:background="#272630">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="297.5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg_points" />

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/colorMain"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_points"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:text="当前积分"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <com.master.qualitydepartment.UniversallyTitle
            android:id="@+id/title_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
        </com.master.qualitydepartment.UniversallyTitle>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/interval_large"
        android:background="@color/dividerColor" />


    <TextView
        android:id="@+id/tv_point_record"
        style="@style/TxtTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_default"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_point_record"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right_arrow"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="积分记录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor" />

    <TextView
        android:id="@+id/tv_point_exchange"
        style="@style/TxtTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_default"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_point_exchange"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right_arrow"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="积分兑换" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor" />

    <TextView
        android:id="@+id/tv_point_rule"
        style="@style/TxtTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_default"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_point_rule"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right_arrow"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:text="积分规则" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor" />

</LinearLayout>
