<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 图片样式 -->
    <style name="ImgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="TxtTitleStyle" parent="@style/ImgStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="TxtTitleStyleGray" parent="@style/ImgStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="OrangeButtonLargeEnable">
        <item name="android:textSize">36px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_button_large</item>
    </style>

    <style name="OrangeButtonLargePressedParent">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_button_large_pressed</item>
    </style>

    <style name="OrangeButtonLargePressed36dp" parent="OrangeButtonLargePressedParent">
        <item name="android:textSize">36px</item>
    </style>

    <style name="OrangeButtonLargePressed32dp" parent="OrangeButtonLargePressedParent">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="OrangeButtonSmall">
        <!--<item name="android:textColor">#556699</item>-->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_button_small</item>
    </style>
    <style name="Font_32_px">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Font_28_px">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:paddingLeft">15dp</item>-->
    </style>

    <style name="TextViewPaymentItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">30px</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>
    
    <style name="RenMinBiSymbol">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">￥</item>
        <item name="android:textColor">@color/colorBalck</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="EditViewStyleHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@null</item>
        <!--<item name="android:inputType">numberDecimal</item>-->
        <item name="android:maxLength">10</item>
        <item name="android:textColor">@color/textLightGray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Lin_payment_bill_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Tv_payment_bill">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">@color/textDarkGray</item>-->
    </style>

    <style name="Tv_payment_bill_gray" parent="@style/Tv_payment_bill">
        <item name="android:textColor">@color/textDarkGray</item>
    </style>

    <style name="Tv_payment_bill_black" parent="@style/Tv_payment_bill">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tv_payment_bill_yellow" parent="@style/Tv_payment_bill">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="myDialogAnim" parent="android:Animation">
        <!-- 进入时的动画 -->
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>
