<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffff"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/app_normal_margin"
        android:paddingTop="@dimen/app_normal_margin">

        <TextView
            android:id="@+id/title"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_normal_margin"
            android:layout_marginLeft="@dimen/app_plus_margin"
            android:layout_marginRight="@dimen/app_plus_margin"
            android:textColor="@color/gray_font_dark"
            android:visibility="gone"
            tools:text="分享到" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            />
    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_issue_close"
        android:textSize="@dimen/font_larger" />
    <!--使底边距为10dp-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff" />

</LinearLayout>